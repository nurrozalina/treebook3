<div class="row">
	<div class="col-md-4">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }, html: {class: "well"}) do |f| %>
			  
			<fieldset>
				<legend>Sign In</legend>
			
			  <div class="form-inputs">
			  	<div class="form-group">
			  		<%= f.input :email, required: false, autofocus: true %>	
			  	</div>
			    <div class="form-group">
			    	<%= f.input :password, required: false %>
			    </div>
			    
			    <%= f.input :remember_me,  :input_html => { :class => 'form-inline' }, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
			  </div>
			</fieldset>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	<div class="col-md-8">
		<h2>Signing in is easy and secure.</h2>
	</div>
</div>